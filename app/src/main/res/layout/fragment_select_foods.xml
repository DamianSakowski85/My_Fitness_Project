<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.damian.myfitnessproject.ui.meals.mealContent.selectFoods.SelectFoodsFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:transitionGroup="true">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_foods"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/item_select_content" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/text_view_empty_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/EmptyListStyle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textAlignment="center"
        android:text="@string/no_foods" />

</androidx.constraintlayout.widget.ConstraintLayout>
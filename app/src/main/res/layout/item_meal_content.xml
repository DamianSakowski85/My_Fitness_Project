<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mcv_meal_content_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="6dp">

        <TextView
            android:id="@+id/text_view_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/tv_options"
            android:ellipsize="end"
            android:maxLines="2"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            tools:text="Example item"/>

        <TextView
            android:id="@+id/text_view_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_name"
            android:layout_toStartOf="@id/tv_options"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            tools:text="Example item"/>

        <TextView
            android:id="@+id/text_view_portion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_desc"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            tools:text="Example item" />

        <TextView
            android:id="@+id/text_view_gm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:layout_below="@id/text_view_desc"
            android:layout_toEndOf="@id/text_view_portion"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:text="@string/gm"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/tv_options"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:text="@string/menu"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>